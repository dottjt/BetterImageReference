<div class="container panelAdminContainer">
  <div class="sub_container">
    <h2>Listing Blog</h2>
    <span><%= link "New blog", to: admin_path(@conn, :newBlogAdmin) %></span>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Display name</th>

          <th></th>
        </tr>
      </thead>
      <tbody>
    <%= for blog <- @blogs do %>
        <tr>
          <td><%= blog.name %></td>
          <td><%= blog.display_name %></td>

          <td class="text-right">
            <span><%= link "Edit", to: admin_path(@conn, :editBlogAdmin, blog), class: "btn btn-default btn-xs" %></span>
            <span><%#= link "Delete", to: blog_path(@conn, :delete, blog), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
          </td>
        </tr>
    <% end %>
      </tbody>
    </table>
  </div>


  <div class="sub_container">
    <h2>Listing Collection</h2>
      <span><%= link "New collection", to: admin_path(@conn, :newCollectionAdmin) %></span>  

